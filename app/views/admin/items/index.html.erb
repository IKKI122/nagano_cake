<div class="container">
<h2>商品一覧</h2>
    <div class="row">
        <div class="icon ml-auto">
            <%= link_to new_admin_item_path, class: 'nav-link' do %>
                <i class="fa-solid fa-lg fa-circle-plus"></i>
            <% end %>
        </div>
        <table class="table">
            <thead class="table-active">
                <tr>
                    <th>商品ID</th>
                    <th>商品名</th>
                    <th>税抜価格</th>
                    <th>ジャンル</th>
                    <th>ステータス</th>
                </tr>
            </thead>
            <tbody>
            <% @items.each do |item| %>
                <tr>
                    <td><%= item.id %></td>
                    <td>
                        <%= link_to admin_item_path(item.id),style: "color: black;" do %>
                            <%= item.name %>
                        <% end %>
                    </td>
                    <td><%= item.price %></td>
                    <td><%= item.genre.name %></td>
                    <td>
                        <% if item.is_active == true %>
                            <div class="text-success font-weight-bold"><%= "販売中" %></div>
                        <% else %>
                            <div class="text-secondary font-weight-bold"><%= "販売停止中" %></div>
                        <% end %>
                    </td>
                </tr>
            <% end %>
            </tbody>
        </table>
        <div class="mx-auto"><%= paginate @items %></div>
    </div>
</div>