<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
    
        <div class="form-group">
            <label for="customer_id">会員ID</label>
               <div class="customer_id"><%= @customer.id %></div>
        </div>
        <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch, local: true do |f| %>
        <div class="form-group">
            <label for="customer_name">氏名</label>
                <div class="customer_name">
                   <%= f.text_field :last_name %>
                   <%= f.text_field :first_name %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_name_kana">フリガナ</label>
                <div class="customer_name_kana">
                   <%= f.text_field :last_name_kana %>
                   <%= f.text_field :first_name_kana %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_postal_code">郵便番号</label>
               <div class="customer_postal_code"><%= f.text_field :postal_code %></div>
        </div>
        <div class="form-group">
            <label for="customer_address">住所</label>
               <div class="customer_address"><%= f.text_field :address %></div>
        </div>
        <div class="form-group">
            <label for="customer_telephone_number">電話番号</label>
               <div class="customer_telephone_number"><%= f.text_field :telephone_number %></div>
        </div>
        <div class="form-group">
            <label for="customer_email">メールアドレス</label>
               <div class="customer_email"><%= f.text_field :email %></div>
        </div>
        <div class="form-group">
            <label for="item_stastus">販売ステータス</label>
               <div class="item_stastus">
                   <%= f.radio_button :is_deleted, "false" %>有効
                   <%= f.radio_button :is_deleted, "true" %>退会
               </div>
        </div>
            <%= f.submit '変更を保存', class:'btn btn-success' %>
    <% end %>
