<div class="container">
<h2 class="mb-5">ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="row form-group">
            <label for="book_title", class="col-md-2 font-weight-bold">ジャンル名</label>
            <div class="book_title col-md-4"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
            <div class="col-md-6"><%= f.submit '　新規登録　', class:'btn btn-success btn-sm font-weight-bold' %></div>
        </div>
    <% end %>

     <div class="row mt-5">
         <table class="table", style="width: 50%">
            <thead>
                <tr>
                    <th class="table-active text-center">ジャンル</th>
                    <th class="table-active"></th>
                </tr>
            </thead>
            <tbody>
            <% @genres.each do |genre| %>
                <tr>
                    <td><%= genre.name %></td>
                    <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success btn-sm font-weight-bold" %></td>
                </tr>
            <% end %>
            </tbody>
        </table>
    </div>
</div>