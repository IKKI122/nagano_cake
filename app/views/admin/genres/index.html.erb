<h2>ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admin_genres_path, local: true do |f| %>
        <div class="form-group">
            <label for="book_title">ジャンル名</label>
               <div class="book_title"><%= f.text_field :name, placeholder: "ジャンル名" %></div>
        </div>
            <%= f.submit '新規登録', class:'btn btn-success' %>
    <% end %>

 <div class="col-md-8 offset-md-1">
     <table class="table table-hover table-inverse">
        <thead>
            <tr>
                <th>ジャンル</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>