<h2>マイページ</h2>
  <div class="col-md-8 offset-md-1">
    <div>
        登録情報
        <%= link_to "編集する", edit_customer_path(@customer.id), class:"btn btn-sm btn-success" %>
    </div>
    
    <div>
      <table class="table-bordered">
        <tr>
      	  <td class="table-active">氏名</td>
      	  <td>
      	      <%= @customer.last_name %>
      	      <%= @customer.first_name %>
      	  </td>
        </tr>
        <tr>
      	  <td class="table-active">カナ</td>
      	  <td>
      	      <%= @customer.last_name_kana %>
      	      <%= @customer.first_name_kana %>
      	  </td>
        </tr>
        <tr>
      	  <td class="table-active">郵便番号</td>
      	  <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
      	  <td class="table-active">住所</td>
      	  <td><%= @customer.address %></td>
        </tr>
        <tr>
      	  <td class="table-active">電話番号</td>
      	  <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
      	  <td class="table-active">メールアドレス</td>
      	  <td><%= @customer.email %></td>
        </tr>
      </table>
    </div>
    
    <div>
        配送先
        <%= link_to "一覧を見る", addresses_path(@customer.id), class:"btn btn-sm btn-info" %>
    </div>
    <div>
      
        注文履歴
        <%= link_to "一覧を見る", orders_path, class:"btn btn-sm btn-info" %>
    </div>
  </div>