<h2>会員情報編集</h2>
    <%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>
        <div class="form-group">
            <label for="customer_name">氏名</label>
                <div class="customer_name">
                   <%= f.text_field :last_name %>
                   <%= f.text_field :first_name %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_name_kana">フリガナ</label>
                <div class="customer_name_kana">
                   <%= f.text_field :last_name_kana %>
                   <%= f.text_field :first_name_kana %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_address">郵便番号</label>
                <div class="customer_address">
                   <%= f.text_field :postal_code %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_address">住所</label>
                <div class="customer_address">
                   <%= f.text_field :address %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_telephone_number">電話番号</label>
                <div class="customer_telephone_number">
                   <%= f.text_field :telephone_number %>
                </div>
        </div>
        <div class="form-group">
            <label for="customer_email">メールアドレス</label>
                <div class="customer_email">
                   <%= f.text_field :email %>
                </div>
        </div>
        <div>
            <%= f.submit '編集内容を保存', class:'btn btn-sm btn-success' %>
        </div>
    <% end %>
    <div>
        <%= link_to "退会する", unsubscribe_path, class:"btn btn-sm btn-danger" %>
    </div>