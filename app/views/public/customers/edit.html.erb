<div class="container">
<h2>会員情報編集</h2>
　<p id="alert" class="text-danger"><%= alert %></p>
    <%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>
        <div class="row form-group">
            <label for="customer_name", class="col-md-2">氏名</label>
            <div class="customer_name col-md-8">
                <div class="row">
                    <label class="col-md-1"></label>
                    <%= f.text_field :last_name, class:"col-md-4" %>
                    <label class="col-md-1"></label>
                    <%= f.text_field :first_name, class:"col-md-4" %>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <label for="customer_name_kana", class="col-md-2">フリガナ</label>
            <div class="customer_name_kana col-md-8">
                <div class="row">
                    <label class="col-md-1"></label>
                    <%= f.text_field :last_name_kana, class:"col-md-4" %>
                    <label class="col-md-1"></label>
                    <%= f.text_field :first_name_kana, class:"col-md-4" %>
                </div>
            </div>
        </div>
        <div class="row form-group">
            <label for="customer_address", class="col-md-2">郵便番号</label>
            <div class="customer_address col-md-8">
               <div class="row"><%= f.text_field :postal_code, class:"offset-md-1 col-md-4" %></div>
            </div>
        </div>
        <div class="row form-group">
            <label for="customer_address", class="col-md-2">住所</label>
            <div class="customer_address col-md-8">
               <div class="row"><%= f.text_field :address, class:"offset-md-1 col-md-9" %></div>
            </div>
        </div>
        <div class="row form-group">
            <label for="customer_telephone_number", class="col-md-2">電話番号</label>
            <div class="customer_telephone_number col-md-8">
               <div class="row"><%= f.text_field :telephone_number, class:"offset-md-1 col-md-4" %></div>
            </div>
        </div>
        <div class="row form-group">
            <label for="customer_email", class="col-md-2">メールアドレス</label>
            <div class="customer_email col-md-8">
               <div class="row"><%= f.text_field :email, class:"offset-md-1 col-md-4" %></div>
            </div>
        </div>
        <div class="row mt-5">
            <div class="col-md-2"></div>
                <div class="col-md-8">
                    <div class="row">
                        <%= f.submit '編集内容を保存', class:'btn btn-sm btn-success offset-md-1 col-md-3 font-weight-bold' %>
                        <%= link_to "退会する", unsubscribe_path, class:"btn btn-sm btn-danger offset-md-1 col-md-3 font-weight-bold" %>
                    </div>
                </div>
        </div>
    <% end %>