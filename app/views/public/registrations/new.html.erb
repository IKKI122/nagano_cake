<div class="container">
<h2 class="mb-5">新規会員登録</h2>
<p id="alert" class="text-danger"><%= alert %></p>
<%= form_with model: @customer, url: customer_registration_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
  <div class="row form_group mb-4">
    <label for="name", class="col-md-3 text-md-start">名前</label>
    <div class="name col-md-9">
      <div class="row">
        <label class="last_name col-md-2 text-right">（姓）</label>
        <%= f.text_field :last_name, class:"col-md-4" %>
        <label class="first_name col-md-2 text-right">（名）</label>
        <%= f.text_field :first_name, class:"col-md-4" %>
      </div>
    </div>
  </div>

  <div class="row form_group mb-4">
    <label for="name_kana", class="col-md-3 text-md-start">フリガナ</label>
    <div class="name_kana col-md-9">
      <div class="row">
        <label class="last_name col-md-2 text-right">（セイ）</label>
        <%= f.text_field :last_name_kana, class:"col-md-4" %>
        <label class="last_name col-md-2 text-right">（メイ）</label>
        <%= f.text_field :first_name_kana, class:"col-md-4" %>
      </div>
    </div>
  </div>
  
  <div class="row form_group">
    <label for="email", class="col-md-3 text-md-start">メールアドレス</label>
    <div class="email col-md-9">
      <div class="row"> 
      <%= f.email_field :email, class:"offset-md-2 col-md-4" %>
      </div>
　　</div>
  </div>
  
  <div class="row form_group">
    <label for="postal_code", class="col-md-3 text-md-start">郵便番号（ハイフンなし）</label>
    <div class="postal_code col-md-9">
      <div class="row"> 
      <%= f.text_field :postal_code, class:"offset-md-2 col-md-4" %>
      </div>
　　</div>
  </div>
  
  <div class="row form_group mb-4">
    <label for="address", class="col-md-3 text-md-start">住所</label>
    <div class="address col-md-9">
      <div class="row"> 
      <%= f.text_field :address, size: 60, class:"offset-md-2 col-md-10" %>
      </div>
    </div>
  </div>
  
  <div class="row form_group mb-4">
    <label for="telephone_number", class="col-md-3 text-md-start">電話番号（ハイフンなし）</label>
    <div class="telephone_number col-md-9">
      <div class="row"> 
      <%= f.text_field :telephone_number, class:"offset-md-2 col-md-4" %>
      </div>
    </div>
  </div>

  <div class="row form_group mb-4">
    <label for="password", class="col-md-3 text-md-start">パスワード（６文字以上）</label>
    <div class="password col-md-9">
      <div class="row"> 
      <% if @minimum_password_length %>
      <% end %>
      <%= f.password_field :password, autocomplete: "new-password", class:"offset-md-2 col-md-4" %>
      </div>
    </div>
  </div>

  <div class="row form_group mb-4">
    <label for="password_confirmation", class="col-md-3 text-md-start">パスワード（確認用）</label>
    <div class="password_confirmation col-md-9">
      <div class="row"> 
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"offset-md-2 col-md-4" %>
      </div>
    </div>
  </div>

  <div class="row actions mt-3">
    <div class="col-md-5 text-md-start"></div>
    <div class="password_confirmation col-md-7">
      <%= f.submit "　新規登録　", class:'btn btn-success font-weight-bold'  %>
    </div>
  </div>
<% end %>

<h2 class="mt-5 mb-3">既に登録済みの方</h2>
  <div>
    <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
  </div>
<!--%= render "こちら",  "public/shared/links" %-->
</div>