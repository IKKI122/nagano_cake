<div class="container">
<h2>ログイン</h2>
<p id="alert" class="text-danger"><%= alert %></p>
<%= form_with model: @customer, url: customer_session_path, id: 'new_customer', class: 'new_customer', local: true do |f| %>
  <div class="row form_group text-center p-1">
    <%= f.label :"メールアドレス", class:"col-md-4" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"col-md-5" %>
  </div>

  <div class="row form_group text-center p-1">
    <%= f.label :"パスワード", class:"col-md-4" %>
    <%= f.password_field :password, autocomplete: "current-password", class:"col-md-5" %>
  </div>

  <div class="actions text-center p-5">
    <%= f.submit "　ログイン　", class:"btn btn-info btn-sm" %>
  </div>
<% end %>
</div>